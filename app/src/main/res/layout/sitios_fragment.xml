<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp">

    <TextView
        android:text="¡SITIOS DE INTERES!"
        android:fontFamily="@font/annie_use_your_telescope"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Elija la informacion que desea conocer!"
        android:fontFamily="@font/annie_use_your_telescope"
        android:textSize="18dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/botonRestaurante"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#C8FDCA"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="¡RESTAURANTES!" />

        <Button
            android:id="@+id/botonHotel"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#C8FDCA"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="¡HOTELES!" />

        <Button
            android:id="@+id/botonBares"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#C8FDCA"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="¡BARES!" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/botonParques"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#C8FDCA"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="¡PARQUES!" />

        <Button
            android:id="@+id/botonTiendas"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#C8FDCA"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="¡TIENDAS!" />

        <Button
            android:id="@+id/botonRecreacion"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#C8FDCA"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="¡REACREACION!" />
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:background="@color/colorPrimary"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSitios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>